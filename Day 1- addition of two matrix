#include <stdio.h>
int main()
 {
  int a, b, c, d, m1[20][20], m2[20][20], m[20][20];
printf("name:TEJASWI\nreg no-192372120");
  printf("\nEnter the number of rows and columns:\n");
  scanf("%d%d", &a,&b);

  printf("Enter elements of matrix one:\n");
  for (c =0; c < a; c++){
    for (d=0; d < b; d++){
      scanf("%d", &m1[c][d]);
    }
  }

  printf("Enter elements of matrix two:\n");
  for (c =0; c < a; c++){
    for (d = 0; d < b; d++){
      scanf("%d", &m2[c][d]);
    }
  }

  printf("addition of the two matrices is below:\n");
  for (c =0; c < a; c++){
    for (d = 0; d < b; d++){
      m[c][d] = m1[c][d] + m2[c][d];
      printf("%d\t",m[c][d]);
    }
    printf("\n\n");
  }

  return 0;
}
